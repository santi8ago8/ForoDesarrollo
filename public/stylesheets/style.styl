body
    padding: 5px
    font: 16px "Lucida Grande", Helvetica, Arial, sans-serif
a
    color: #00B7FF
    text-decoration: none;
.container
    max-width 970px
    position absolute;
    overflow-y auto
    top 5px
    left 5px
    right 5px
    bottom 5px
    padding 5px
    border 1px solid
    border-radius 5px
    margin auto
.clear
    clear both
.content
    position absolute
    top:0px
    bottom 0px
    left 5px
    right 5px
    header
        text-align right
        h2
            text-align left
            display inline
            float left
            margin 0px
        span,input
            margin-left 2px
            display inline
    form
        display inline;
.registro *
    display block
textarea
    width 96%
    height 75%
    resize vertical
.simplePagerNav
    li
        display inline
        border 1px solid green
        border-radius 5px
        padding 4px
        margin 2px
.textcoment
    height 75px
p.comentario
    display block
    margin-bottom 1px solid gray
.post
    border-top 1px solid gray
    border-bottom 1px solid gray
pre
    background-color #393939
    color #f2f2f2